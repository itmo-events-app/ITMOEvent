<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".view.ProfileMenu">

    <FrameLayout
        android:id="@+id/blank_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/avatar_background"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@drawable/circle"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/guideline_20"
        app:layout_constraintEnd_toStartOf="@id/guideline_v30"
        app:layout_constraintStart_toEndOf="@id/guideline_v05"
        app:layout_constraintTop_toBottomOf="@id/guideline_10" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/avatar"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@drawable/user"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/guideline_20"
        app:layout_constraintEnd_toStartOf="@id/guideline_v30"
        app:layout_constraintStart_toEndOf="@id/guideline_v05"
        app:layout_constraintTop_toBottomOf="@id/guideline_10" />




    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Имя фамилия"
        android:textAppearance="@style/Text.Body1"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/guideline_10"
        app:layout_constraintBottom_toTopOf="@id/contacts"
        app:layout_constraintStart_toEndOf="@id/guideline_v35"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/contacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Контактные данные"
        android:textAppearance="@style/Text.Body1"
        android:textSize="16sp"
        android:textColor="@color/grey_400"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/guideline_20"
        app:layout_constraintStart_toEndOf="@id/guideline_v35"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        layout="@layout/jump_line"
        android:id="@+id/jump_line_notification"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_30"
        app:layout_constraintBottom_toTopOf="@id/guideline_38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        layout="@layout/jump_line"
        android:id="@+id/jump_line_creation_requests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_38"
        app:layout_constraintBottom_toTopOf="@id/guideline_46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        layout="@layout/jump_line"
        android:id="@+id/jump_line_organized_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_46"
        app:layout_constraintBottom_toTopOf="@id/guideline_54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        layout="@layout/jump_line"
        android:id="@+id/jump_past_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_54"
        app:layout_constraintBottom_toTopOf="@id/guideline_62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        layout="@layout/jump_line"
        android:id="@+id/jump_organizational_tasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_62"
        app:layout_constraintBottom_toTopOf="@id/guideline_70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.325"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.395"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.465"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.535"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.605"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>


</androidx.constraintlayout.widget.ConstraintLayout>