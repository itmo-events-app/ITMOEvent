<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/golos</item>
    </style>

    <style name="Text.Header1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header3">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text.Label.Highlight">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
    </style>

    <style name="TextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">?textAppearanceLabelMedium</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Text.profile_fio">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.clickable">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_300</item>
    </style>

</resources>